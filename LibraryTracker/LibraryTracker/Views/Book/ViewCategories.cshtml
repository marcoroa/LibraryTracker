@model IEnumerable<LibraryTracker.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>ViewCategories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.CategoryID }) |
            @Html.ActionLink("Details", "CategoryDetails", new { id=item.CategoryID }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
